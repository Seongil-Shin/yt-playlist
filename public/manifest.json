{
  "manifest_version": 3,
  "name": "Youtube playlist",
  "description": "Playlist for youtube. Add videos to playlist with start time and end time.",
  "version": "0.1.0",
  "icons": {
    "128": "logo192.png"
  },
  "permissions": ["tabs", "activeTab"],
  "action": {
    "default_icon": "logo192.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts":[
    {
      "matches" : ["https://*.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "save_playlist": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Run playlist"
    }
  }
}
